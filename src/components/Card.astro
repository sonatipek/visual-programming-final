---
export interface Props {
	title: string;
	body: string;
	href: string;
	img_path: string;
}

const { href, title, body, img_path } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<div class="img-place">
			<img src={img_path} width="300" height="200"/>
		</div>

		<h2>
			{title}
			
		</h2>
		<p>
			{body}
		</p>

	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		background-color: white;
		background-size: 400%;
		border-radius: 0.5rem;
		background-position: 100%;
		transition: scale 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
		width: 100%;
		min-height: 300px;
	}

	.link-card > .href-link {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		border-radius:0.35rem;
		color: #111;
		background-color: white;
		opacity: 0.8;
	}
	.img-place{
		height: 30vh;
		width: 100%;
	}
	.img-place img{
		width: 100%;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		padding: 0.75rem;
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: #444;
		padding: 0.75rem;
	}
	
	.link-card:is(:hover, :focus-within) {
		scale: 1.2;
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent));
	}
</style>
